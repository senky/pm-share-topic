<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.3.xsd">
	<header>
		<meta name="generator" content="MODX file generated with PP MODX Creator by tumba25"/>
		<license><![CDATA[http://opensource.org/licenses/gpl-license.php GNU General Public License v2]]></license>
		<title lang="en"><![CDATA[Share topic]]></title>
		<description lang="en"><![CDATA[This mod will allow users to fast share topic they like by one click. Facebook, Twitter and Delicious are supported.]]></description>
		<author-group>

			<author>
				<realname><![CDATA[Jakub Senko]]></realname>
				<username><![CDATA[Senky]]></username>
				<homepage><![CDATA[http://www.online-hry-help.sk]]></homepage>
				<email><![CDATA[jakubsenko@gmail.com]]></email>
			</author>
		</author-group>
		<mod-version>1.0.0</mod-version>

		<installation>
			<level>easy</level>
			<time>60</time>
			<target-version>3.0.6</target-version>
		</installation>
	</header>
	<action-group>

    <copy>
      <file from="root/styles/prosilver/theme/images/icon_delicious.gif" to="styles/prosilver/theme/images/icon_delicious.gif"/>
      <file from="root/styles/prosilver/theme/images/icon_facebook.gif" to="styles/prosilver/theme/images/icon_facebook.gif"/>
      <file from="root/styles/prosilver/theme/images/icon_twitter.gif" to="styles/prosilver/theme/images/icon_twitter.gif"/>
    </copy>

		<open src="viewtopic.php">
			<edit>
				<find><![CDATA[	'U_EMAIL_TOPIC'			=> ($auth->acl_get('f_email', $forum_id) && $config['email_enable']) ? append_sid("{$phpbb_root_path}memberlist.$phpEx", "mode=email&amp;t=$topic_id") : '',]]></find>
				<action type="after-add"><![CDATA['U_FACEBOOK_TOPIC'	=> 'http://www.facebook.com/share.php?u=' . generate_board_url() . "/viewtopic.$phpEx?f=$forum_id%26t=$topic_id",
	'U_TWEET_TOPIC'	    => generate_board_url() . "/viewtopic.$phpEx?f=$forum_id%26t=$topic_id",
	'U_DELICIOUS_TOPIC'	    => 'http://del.icio.us/post?url=' . generate_board_url() . "/viewtopic.$phpEx?f=$forum_id%26t=$topic_id",]]></action>
			</edit>
		</open>
		<open src="language/en/viewtopic.php">
			<edit>
				<find><![CDATA[	'SHOW_QR'				=> 'Quick Reply',]]></find>

				<action type="after-add"><![CDATA['SHARE_FB'				=> 'Share on Facebook',
	'SHARE_TWITTER'				=> 'Share on Twitter',
	'SHARE_DELICIOUS'				=> 'Share on Delicious',]]></action>
			</edit>
		</open>
		<open src="styles/prosilver/template/overall_header.html">
			<edit>
				<find><![CDATA[				<!-- IF U_PRINT_PM --><li class="rightside"><a href="{U_PRINT_PM}" title="{L_PRINT_PM}" accesskey="p" class="print">{L_PRINT_PM}</a></li><!-- ENDIF -->]]></find>
				<action type="after-add"><![CDATA[<!-- IF U_FACEBOOK_TOPIC --><li class="rightside"><a href="{U_FACEBOOK_TOPIC}" title="{L_SHARE_FB}" class="facebook" onclick="window.open(this.href);return false;">{L_SHARE_FB}</a></li><!-- ENDIF -->
				<!-- IF U_TWEET_TOPIC --><li class="rightside"><a href="http://twitter.com/home?status={U_TWEET_TOPIC}" title="{L_SHARE_TWITTER}" class="twitter" onclick="window.open(this.href);return false;">{L_SHARE_TWITTER}</a></li><!-- ENDIF -->
				<!-- IF U_DELICIOUS_TOPIC --><li class="rightside"><a href="{U_DELICIOUS_TOPIC}" title="{L_SHARE_DELICIOUS}" class="delicious" onclick="window.open(this.href);return false;">{L_SHARE_DELICIOUS}</a></li><!-- ENDIF -->]]></action>
			</edit>
		</open>

		<open src="styles/prosilver/theme/bidi.css">
			<edit>
				<find><![CDATA[.rtl a.print, .rtl a.sendemail, .rtl a.fontsize]]></find>
				<inline-edit>
					<inline-find><![CDATA[.rtl a.fontsize]]></inline-find>
					<inline-action type="after-add"><![CDATA[, .rtl a.facebook, .rtl a.twitter, .rtl a.delicious]]></inline-action>
				</inline-edit>
			</edit>
		</open>

          <open src="styles/prosilver/theme/buttons.css">
             <edit>
                <find><![CDATA[a.print, a.sendemail, a.fontsize]]></find>
                <inline-edit>

                   <inline-find><![CDATA[a.fontsize]]></inline-find>
                   <inline-action type="after-add"><![CDATA[, a.facebook, a.twitter, a.delicious]]></inline-action>
                </inline-edit>
                           </edit>
                           <edit>
                <find><![CDATA[a.print {
       background-image: none;
       width: 22px;
    }]]></find>
                <action type="before-add"><![CDATA[a.facebook {
       background-image: none;
       width: 22px;
    }

    a.twitter {
       background-image: none;
       width: 22px;
    }

    a.delicious {
       background-image: none;
       width: 22px;
    }]]></action>

             </edit>
          </open>



		<open src="styles/prosilver/theme/colours.css">
			<edit>
				<find><![CDATA[.forwardpm-icon span	{ background-image: url("{IMG_BUTTON_PM_FORWARD_SRC}") ;}]]></find>
				<action type="after-add"><![CDATA[a.facebook {
	background-image: url("{T_THEME_PATH}/images/icon_facebook.gif");
}

a.twitter {
	background-image: url("{T_THEME_PATH}/images/icon_twitter.gif");
}

a.delicious {
	background-image: url("{T_THEME_PATH}/images/icon_delicious.gif");
}]]></action>
			</edit>
		</open>
		<diy-instructions lang="en"><![CDATA[Purge the cache.]]></diy-instructions>

	</action-group>
</mod>
